<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="practical_work_ii_oop.LoginPage"
    Title="Login"
    BackgroundColor="#F0F0F0">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="30" Spacing="20">

                <Frame BackgroundColor="#3C5A78"
                       CornerRadius="8"
                       Padding="20"
                       HasShadow="False">
                    <Label Text="OOP Conversor"
                           HorizontalOptions="Center"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White"
                           FontFamily="Georgia"/>
                </Frame>

                <Label Text="Username"
                       FontSize="18"
                       TextColor="Black"
                       FontFamily="Arial"
                       Margin="10,10,10,0"/>
                <Entry x:Name="UsernameEntry"
                       Placeholder="Enter your username"
                       BackgroundColor="White"
                       TextColor="Black"
                       FontFamily="Arial"
                       FontSize="18"
                       HeightRequest="50"
                       Margin="10,0,10,10"/>

                <Label Text="Password"
                       FontSize="18"
                       TextColor="Black"
                       FontFamily="Arial"
                       Margin="10,10,10,0"/>
                <Entry x:Name="PasswordEntry"
                       Placeholder="Enter your password"
                       IsPassword="True"
                       BackgroundColor="White"
                       TextColor="Black"
                       FontFamily="Arial"
                       FontSize="16"
                       HeightRequest="40"
                       Margin="10,0,10,10"/>

                <Button x:Name="SignInButton"
                        Text="SIGN IN"
                        BackgroundColor="#A9A9A9"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        CornerRadius="5"
                        Clicked="OnSignInClicked"
                        HorizontalOptions="Fill"
                        Margin="0,10"/>

                <Grid ColumnDefinitions="*,*,*" Padding="10" Margin="0,0,0,0">
                    <Label Grid.Column="0"
                           Text="Forgot Password"
                           FontSize="16"
                           TextColor="Blue"
                           HorizontalOptions="Start"
                           FontFamily="Arial"
                           TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnForgotPasswordTapped"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Grid.Column="1"
                           Text="Exit"
                           FontSize="16"
                           TextColor="Blue"
                           HorizontalOptions="Center"
                           FontFamily="Arial"
                           TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnExitTapped"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Grid.Column="2"
                           Text="Register"
                           FontSize="16"
                           TextColor="Blue"
                           HorizontalOptions="End"
                           FontFamily="Arial"
                           TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRegisterTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
