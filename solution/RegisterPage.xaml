<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="practical_work_ii_oop.RegisterPage"
    Title="Register"
    BackgroundColor="#F0F0F0">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Frame BackgroundColor="#3C5A78"
                   CornerRadius="8"
                   Padding="20"
                   HasShadow="False">
                <Label Text="Register New User"
                       HorizontalOptions="Center"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       FontFamily="Georgia"/>
            </Frame>

            <Label Text="Name" 
                FontSize="18" 
                TextColor="Black"
                FontFamily="Arial"/>
            <Entry x:Name="NameEntry"
                   Placeholder="Enter your name"
                   BackgroundColor="White"
                   TextColor="Black"
                   FontFamily="Arial"
                   FontSize="16"
                   HeightRequest="40"/>

            <Label Text="Username" 
                FontSize="18" 
                TextColor="Black"
                FontFamily="Arial"/>
            <Entry x:Name="UsernameEntry"
                   Placeholder="Choose a username"
                   BackgroundColor="White"
                   TextColor="Black"
                   FontFamily="Arial"
                   FontSize="16"
                   HeightRequest="40"/>

            <Label Text="Email" 
                FontSize="18" 
                TextColor="Black"
                FontFamily="Arial"/>
            <Entry x:Name="EmailEntry"
                   Placeholder="Enter your email"
                   BackgroundColor="White"
                   TextColor="Black"
                   FontFamily="Arial"
                   FontSize="16"
                   HeightRequest="40"/>

            <Label Text="Password" 
                FontSize="18" 
                TextColor="Black"
                FontFamily="Arial"/>
            <Entry x:Name="PasswordEntry"
                   Placeholder="Create a password"
                   IsPassword="True"
                   BackgroundColor="White"
                   TextColor="Black"
                   FontFamily="Arial"
                   FontSize="16"
                   HeightRequest="40"/>

            <Label Text="Confirm Password" 
                FontSize="18"
                TextColor="Black" 
                FontFamily="Arial"/>
            <Entry x:Name="ConfirmPasswordEntry"
                   Placeholder="Repeat your password"
                   IsPassword="True"
                   BackgroundColor="White"
                   TextColor="Black"
                   FontFamily="Arial"
                   FontSize="16"
                   HeightRequest="40"/>

            <StackLayout Orientation="Horizontal">
                <CheckBox x:Name="PolicyCheck"/>
                <Label Text="I agree to the protection policy"
                       TextColor="Black"
                       VerticalOptions="Center"
                       FontSize="14"
                       FontFamily="Arial"/>
            </StackLayout>

            <Button Text="Register"
                    BackgroundColor="#A9A9A9"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="5"
                    Clicked="OnRegisterClicked"
                    HorizontalOptions="Fill"
                    Margin="0,10"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
